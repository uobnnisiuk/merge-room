{
  "name": "merge-room",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "postCreateCommand": {
    "install-build-tools": "sudo apt-get update && sudo apt-get install -y python3 make g++",
    "setup-pnpm": "corepack enable && corepack prepare pnpm@10.25.0 --activate",
    "install-deps": "cd ${containerWorkspaceFolder}/web && pnpm install"
  },
  "forwardPorts": [5173, 3001],
  "portsAttributes": {
    "5173": {
      "label": "Frontend (Vite)",
      "onAutoForward": "openBrowser"
    },
    "3001": {
      "label": "Backend (Express)",
      "onAutoForward": "silent"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "remoteUser": "node"
}
